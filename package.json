{
  "name": "nebula-components",
  "version": "0.1.0",
  "description": "Building on top of Nebula CSS a series of common components",
  "main": "index.js",
  "scripts": {
    "lint": "stylelint '*/**/*.scss' --syntax scss",
    "sass": "node-sass --output-style compressed --include-path ./node_modules/nebula-css/ --include-path ./nebula-components -o demo demo/scss/main.scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers 'last 2 versions, ie 9-11' -r demo/main.css",
    "build": "npm run sass && npm run autoprefixer",
    "start": "npm run build && onchange '*/**/*.scss' -- npm run build",
    "serve": "http-server demo -o",
    "test": "npm run lint",
    "deploy": "npm run lint && npm run build && gh-pages -d demo"
  },
  "keywords": [
    "itcss",
    "bemit",
    "bem",
    "sass",
    "oocss",
    "grid",
    "css"
  ],
  "author": "Robert Smith",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "gh-pages": "^1.0.0",
    "http-server": "^0.10.0",
    "node-sass": "^4.5.3",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.0",
    "stylelint": "^8.0.0",
    "stylelint-config-sass-guidelines": "^2.2.0",
    "stylelint-scss": "^1.5.1",
    "stylelint-selector-bem-pattern": "^1.1.0"
  },
  "dependencies": {
    "nebula-css": "^2.4.2"
  }
}
